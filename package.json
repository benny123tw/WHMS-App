{
  "name": "electron-quick-start-typescript",
  "version": "1.0.0",
  "description": "A minimal Electron application written with Typescript",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run clean && npm run build && electron ./dist/main.js"
  },
  "repository": "https://github.com/electron/electron-quick-start-typescript",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bulma": "^0.9.3",
    "chalk": "^4.1.2",
    "custom-electron-titlebar": "^3.2.6",
    "electron": "^14.0.0",
    "electron-log": "^4.4.1",
    "electron-updater": "^4.3.9",
    "fs": "*",
    "path": "^0.12.7",
    "rimraf": "^3.0.2"
  },
  "build": {
    "appId": "com.benny.app",
    "productName": "Auto Updater",
    "copyright": "Copyright Â© 2012  ${author}",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "extraResources": [
      "./assets/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "benny123tw",
        "repo": "work-hour-system"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true,
      "runAfterFinish": true,
      "installerLanguages": "zh_TW",
      "language": "1028",
      "license": "LICENSE.md",
      "artifactName": "${productName}_Setup_${version}.${ext}",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "menuCategory": true,
      "shortcutName": "AutoUpdater"
    }
  }
}
