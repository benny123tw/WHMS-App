{
  "name": "whms-app",
  "productName": "WHMS",
  "version": "1.0.2",
  "description": "A Gui for WHMS",
  "main": "./dist/main.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run clean && npm run build && electron .",
    "dev": "electron ./dist/main.js",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "publish": "npm run build && electron-builder build -p always"
  },
  "repository": "https://github.com/benny123tw/work-hour-system",
  "keywords": [
  ],
  "author": "Benny123tw",
  "license": "CC0-1.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "electron": "^13.1.8",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bulma": "^0.9.3",
    "chalk": "^4.1.2",
    "custom-electron-titlebar": "^3.2.6",
    "electron-log": "^4.4.1",
    "electron-updater": "^4.3.9",
    "fs": "*",
    "path": "^0.12.7",
    "rimraf": "^3.0.2",
    "whms": "^1.0.3"
  },
  "build": {
    "appId": "com.benny.app",
    "productName": "Work Hour Management System",
    "copyright": "Copyright Â© 2021  ${author}",
    "directories": {
      "buildResources": "assets",
      "output": "publish"
    },
    "extraResources": [
      "./data/**",
      "./assets/images/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "benny123tw",
        "repo": "work-hour-system"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true,
      "runAfterFinish": true,
      "installerLanguages": "zh_TW",
      "language": "1028",
      "license": "LICENSE.md",
      "artifactName": "${productName}_Setup_${version}.${ext}",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "menuCategory": true,
      "shortcutName": "WHMS"
    }
  }
}
